{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Hugo Server (newth.ai)",
      "type": "shell",
      "command": "hugo",
      "args": ["server", "--environment", "newth_ai", "--port", "1313"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Start building sites",
            "endsPattern": "Web Server is available at"
          }
        }
      ]
    },
    {
      "label": "Start Hugo Server (newth.art)",
      "type": "shell",
      "command": "hugo",
      "args": ["server", "--environment", "newth_art", "--port", "1314"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Start building sites",
            "endsPattern": "Web Server is available at"
          }
        }
      ]
    },
    {
      "label": "Start Both Hugo Servers",
      "dependsOn": ["Start Hugo Server (newth.ai)", "Start Hugo Server (newth.art)"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Build Hugo Site (newth.ai)",
      "type": "shell",
      "command": "hugo",
      "args": ["--config", "hugo_newth_ai.yaml", "--minify"],
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Build Hugo Site (newth.art)",
      "type": "shell",
      "command": "hugo",
      "args": ["--config", "hugo_newth_art.yaml", "--minify"],
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Build Both Hugo Sites",
      "dependsOn": ["Build Hugo Site (newth.ai)", "Build Hugo Site (newth.art)"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
